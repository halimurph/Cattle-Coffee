import SwiftUI

struct ImpactSection: View {
    let closeAction: () -> Void
    @EnvironmentObject var userSession: UserSession

    private let dark  = Color(red: 0.145, green: 0.098, blue: 0.051)
    private let gold  = Color(red: 0.851, green: 0.537, blue: 0.157)

    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("Your Impact")
                .font(.custom("Konkhmer Sleokchher", size: 18))
                .foregroundColor(dark)

            // üî¢ Text stats ‚Äî automatically live
            VStack(alignment: .leading, spacing: 6) {
                Text(String(format: "$%.2f kept in your community", userSession.totalLocalSpending))
                    .font(.custom("Konkhmer Sleokchher", size: 13))
                    .foregroundColor(dark)

                Text("\(userSession.totalOrders) total orders")
                    .font(.custom("Konkhmer Sleokchher", size: 12))
                    .foregroundColor(dark.opacity(0.8))

                Text("\(userSession.totalOneTimeOrders) one-time orders")
                    .font(.custom("Konkhmer Sleokchher", size: 12))
                    .foregroundColor(dark.opacity(0.8))

                Text("\(userSession.totalSubscriptionOrders) subscription pickups")
                    .font(.custom("Konkhmer Sleokchher", size: 12))
                    .foregroundColor(dark.opacity(0.8))
            }

            // üìä Simple ‚Äúgraph‚Äù using monthlySpending
            if !userSession.monthlySpending.isEmpty {
                VStack(alignment: .leading, spacing: 8) {
                    Text("Spending over time")
                        .font(.custom("Konkhmer Sleokchher", size: 13))
                        .foregroundColor(dark)

                    let maxAmount = userSession.monthlySpending.map(\.amount).max() ?? 1

                    HStack(alignment: .bottom, spacing: 10) {
                        ForEach(Array(userSession.monthlySpending.enumerated()), id: \.offset) { _, point in
                            VStack {
                                // height scaled relative to max
                                Rectangle()
                                    .fill(gold)
                                    .frame(
                                        width: 18,
                                        height: max(10, CGFloat(point.amount / maxAmount) * 80)
                                    )

                                Text(point.label)
                                    .font(.system(size: 9, weight: .medium, design: .rounded))
                                    .foregroundColor(dark.opacity(0.8))
                                    .rotationEffect(.degrees(-45))
                                    .frame(width: 30, height: 30, alignment: .topLeading)
                            }
                        }
                    }
                    .padding(.top, 4)
                }
            } else {
                Text("Place your first order to start seeing your impact.")
                    .font(.custom("Konkhmer Sleokchher", size: 11))
                    .foregroundColor(dark.opacity(0.7))
                    .padding(.top, 6)
            }
        }
        .padding(16)
        .background(
            RoundedRectangle(cornerRadius: 18)
                .fill(Color(red: 0.969, green: 0.949, blue: 0.929))
        )
        .overlay(
            RoundedRectangle(cornerRadius: 18)
                .stroke(Color(red: 0.85, green: 0.7, blue: 0.5).opacity(0.45), lineWidth: 1)
        )
        Button(action: closeAction) {
                Image(systemName: "xmark")
                    .foregroundColor(Color(red: 0.145, green: 0.098, blue: 0.051))
                    .font(.system(size: 22, weight: .bold))
            }
            .padding(.top, 48)
            .padding(.trailing, 32)
        }
    }

//
//  ImpactSection.swift
//  beef+brew
//
//  Created by Hali Murphy on 12/1/25.
//

