import SwiftUI

struct SubscriptionPopupView: View {
    let closeAction: () -> Void
    let onPlanSelected: (SubscriptionPlan) -> Void
    let plans: [SubscriptionPlan]

    var body: some View {
        ZStack(alignment: .top) {
            Color(red: 0.969, green: 0.941, blue: 0.925)
                .ignoresSafeArea()
            
        
            ScrollView(showsIndicators: false) {
            VStack(spacing: 0) {
                // Optional header
                    Text("SUBSCRIBE")
                        .font(.custom("Konkhmer Sleokchher", size: 35))
                        .foregroundColor(Color(red: 0.145, green: 0.098, blue: 0.051))
                        .padding(.top, 52)
                    
                    Text("DON'T THINK ABOUT IT, JUST PICK UP")
                        .font(.custom("Konkhmer Sleokchher", size: 12))
                        .foregroundColor(Color(red: 0.145, green: 0.098, blue: 0.051))
                        .padding(.top, 10)
                        .padding(.bottom, 20)

                
                    VStack(spacing: 28) {
                        Button {
                            onPlanSelected(plans[0])
                        } label: {
                            SubscriptionView.WeeklyCard
                        }
                        .buttonStyle(.plain)

                        Button {
                            onPlanSelected(plans[1])
                        } label: {
                            SubscriptionView.MonthlyCard
                        }
                        .buttonStyle(.plain)

                        Button {
                            onPlanSelected(plans[2])
                        } label: {
                            SubscriptionView.SchoolYearCard
                        }
                        .buttonStyle(.plain)
                    }
                    .padding(.horizontal, 24)
                    .padding(.bottom, 80)
                }
            }

            // CLOSE BUTTON
            HStack {
                Spacer()
                Button {
                    withAnimation(.spring(response: 0.45, dampingFraction: 0.85)) {
                        closeAction()
                    }
                } label: {
                    Image(systemName: "xmark")
                        .font(.system(size: 24, weight: .semibold))
                        .foregroundColor(Color(red: 0.145, green: 0.098, blue: 0.051))
                        .padding(.trailing, 24)
                        .padding(.top, 22)
                }
            }
        }
        .overlay(
            Rectangle()
                .fill(Color.black.opacity(0.18))
                .frame(height: 18)
                .blur(radius: 12),
            alignment: .top
        )
    }
}
