import SwiftUI

struct RootView: View {
    @EnvironmentObject var userSession: UserSession

    var body: some View {
        if userSession.isLoggedIn {
            // whatever your main tab / navigation is:
            AccountMainView()
        } else {
            SignInView {
                // when SignInView calls onAuthenticated, we flag logged in
                userSession.isLoggedIn = true
            }
        }
    }
}
